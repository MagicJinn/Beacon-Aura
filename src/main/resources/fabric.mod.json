{
	"schemaVersion": 1,
	"id": "beacon-aura",
	"version": "${version}",
	"name": "Beacon Aura",
	"description": "Enhance beacon functionality by allowing you to soak in its effects.",
	"authors": [
		"MagicJinn"
	],
	"contact": {
		"homepage": "https://github.com/MagicJinn/Beacon-Aura",
		"sources": "https://github.com/MagicJinn/Beacon-Aura",
		"issues": "https://github.com/MagicJinn/Beacon-Aura/issues"
	},
	"license": "MIT",
	"icon": "assets/beacon-aura/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			{
				"value": "magicjinn.beaconaura.BeaconAura",
				"adapter": "kotlin"
			}
		],
		"client": [
			{
				"value": "magicjinn.beaconaura.BeaconAuraClient",
				"adapter": "kotlin"
			}
		]
	},
	"mixins": [
		"beacon-aura.mixins.json",
		{
			"config": "beacon-aura.client.mixins.json",
			"environment": "client"
		}
	],
	"depends": {
		"fabricloader": ">=0.17.2",
		"minecraft": "~1.21.8",
		"java": ">=21",
		"fabric-api": "*",
		"fabric-language-kotlin": "*"
	},
	"suggests": {
		"another-mod": "*"
	}
}